<div class="row">
  <div class="col-md-9">
    <div class="account">
      <h1>Bienvenido {{user.username}}</h1>
      <a href="/users/logout">Desloguear</a>
    </div>
    {{#if user.admin}}
    <h3>Ingresar nuevo producto:</h3>
    <form id="newProduct" autocomplete="off">
      <div class="mb-9">
        <div class="little">
          <label class="form-label">Nombre:</label>
          <input type="text" id="title" name="title" required class="form-control" />
        </div>
      </div>
      <div class="mb-9">
        <div class="little">
          <label class="form-label">Precio:</label>
          <input type="number" id="price" name="price" required class="form-control" />
        </div>
      </div>
      <div class="mb-9">
        <label class="form-label">URL imagen:</label>
        <input type="url" id="thumbnail" name="thumbnail" required class="form-control" />
      </div>
      <input type="submit" class="btn btn-primary" value="Agregar"/>
    </form>
    {{/if}}
    <h3>Productos disponibles:</h3>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
          </tr>
        </thead>
        <tbody id="products">
          {{#each data}}
            <tr>
              <td class='align-middle'>{{this.title}}</td>
              <td class='align-middle'>${{this.price}}</td>
              <td class='align-middle'><img src="{{this.thumbnail}}" width="60" alt="" /></td>
              <td class='align-middle'>
                <form action="/carts/{{@root.user.cart}}/{{this.id}}" method="post" >
                  <input type="submit" name="add" value="Agregar" class="btn btn-primary">
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
    </table>
  </div>
</div>